# Core application settings
APP_NAME=Tastebuds API
ENVIRONMENT=development
API_PREFIX=/api
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=https://localhost,https://127.0.0.1,http://localhost:3000,http://127.0.0.1:3000

# Database connections (Docker compose defaults)
DATABASE_URL=postgresql+asyncpg://tastebuds:tastebuds@db:5432/tastebuds
TEST_DATABASE_URL=postgresql+asyncpg://tastebuds:tastebuds@db:5432/tastebuds_test
REDIS_URL=redis://redis:6379/0
WORKER_QUEUE_NAMES=default,ingestion,integrations,maintenance,webhooks,sync

# Frontend (Next.js)
NEXT_PUBLIC_API_BASE=https://localhost/api
API_INTERNAL_BASE=http://api:8000/api
NEXT_PUBLIC_APP_BASE_URL=https://localhost

# Auth / JWT
JWT_SECRET_KEY=change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRES_MINUTES=30
REFRESH_TOKEN_EXPIRES_MINUTES=10080

# External search preview controls
EXTERNAL_SEARCH_PREVIEW_TTL_SECONDS=300
EXTERNAL_SEARCH_PREVIEW_MAX_PAYLOAD_BYTES=50000
EXTERNAL_SEARCH_PREVIEW_MAX_METADATA_BYTES=20000
INGESTION_PAYLOAD_RETENTION_DAYS=90
INGESTION_PAYLOAD_MAX_BYTES=250000
INGESTION_METADATA_MAX_BYTES=50000
CREDENTIAL_VAULT_KEY=
OPS_ADMIN_EMAILS=

# External API keys (optional but required for live ingestion)
GOOGLE_BOOKS_API_KEY=
# TMDB uses the v4 bearer token: e.g., "Bearer eyJhbGciOiJIUzI1NiJ9..."
TMDB_API_AUTH_HEADER=
IGDB_CLIENT_ID=
IGDB_CLIENT_SECRET=
LASTFM_API_KEY=
